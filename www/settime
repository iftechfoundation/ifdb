<?php

include_once "session-start.php";
include_once "util.php";
include_once "pagetpl.php";
include_once "login-check.php";

function sendResponse($statmsg, $errmsg, $detail)
{
    global $xml;

    if ($xml)
    {
        header("Content-Type: text/xml");
        header("Expires: Mon, 26 Jul 1997 05:00:00 GMT");
        header("Cache-Control: no-store, no-cache, must-revalidate");

        echo "<?xml version=\"1.0\" encoding=\"UTF-8\" ?><response>"
            . ($statmsg ? "<label>$statmsg</label>" : "")
            . ($errmsg ? "<error>$errmsg</error>" : "")
            . "</response>";
    }
    else
    {
        smallPageHeader("Update Your Time Vote");   // Do we need this?
        if ($errmsg)
            echo "<span class=errmsg>$errmsg</span><p>";

        echo $detail;
        smallPageFooter();
    }

    exit();
}

// connect to the database
include_once "dbconnect.php";
$db = dbConnect();
if ($db == false)
    sendResponse("Not Saved", "An error occurred connecting to the database. "
                 . "Please try again later.", false);

// get the request parameters
$game = get_req_data('game');
$newtime = get_req_data('newtime');
$xml = isset($_REQUEST['xml']);

// make sure there's a game
if ($game == "")
    sendResponse("Not Saved", "No game was specified.", false);

// make sure we process any persistent login state
$userid = checkPersistentLogin();
if (!$userid && !$xml && !logged_in(true))
    exit();

// make sure we're logged in
if (!$userid)
    sendResponse("Not Saved", "To submit a time, please log in.", false);

// make sure the game is valid
$qgame = mysql_real_escape_string($game, $db);
$result = mysql_query("select id from games where id = '$qgame'", $db);
if (mysql_num_rows($result) == 0)
    sendResponse("Not Saved", "The specified game was not found.", false);

// if there's an existing time for this user for this game, simply update
// the time; otherwise add a new row

$result = mysql_query("lock tables playertimes write", $db);
if ($result) {
    $result = mysql_query(
        "select id, timevote from playertimes
         where gameid='$qgame' and userid='$userid'", $db);
}
if ($result && mysql_num_rows($result)) {
    // get the ID of the existing record
    $rid = mysql_result($result, 0, "id");
    $oldtime = mysql_result($result, 0, "timevote");
} else {
    $rid = false;
    $oldtime = false;
}

if ($newtime < 0 || $newtime > 12000) {
    sendResponse("Not Saved", "The time specified is not valid.", false);
}

// set the time:
//
// - if there's an existing time record, and the new time is zero, delete the record
// - if there's an existing time, and the new time is not zero, update it
// - if there's no existing time, insert a new record
if ($newtime == 0 && $rid) {
    // time changed to zero -> delete the record
    $result = mysql_query("delete from playertimes where id='$rid'", $db);
    if (!$result) error_log(mysql_error($db));
    $ok = "Your time vote has been removed.";

} else if ($rid) {
    // there's an existing time record, and the new time is not 0, so update the record
    $result = mysql_query(
        "update playertimes set timevote = '$newtime' where id='$rid'", $db);
    if (!$result) error_log(mysql_error($db));
    $ok = "Your time has been updated.";

} else if ($newtime != 0) {
    // there's no time there yet for this user, so insert a new one
    $result = mysql_query(
        "insert into playertimes (gameid, userid, timevote)
         values ('$qgame', '$userid', '$newtime')", $db);
    $ok = "Your time has been saved.";
} else {
    $result = true;
    $ok = true;
}

// release the table lock
mysql_query("unlock tables", $db);

// check the result
if ($result) {
    sendResponse("Saved", false, $ok);
} else if ($ok) {
    sendResponse("Not Saved", "An error occurred updating the database. "
                 . "Please try again later.", false);
} else {
    sendResponse("Not Saved", "The request was invalid.", false);
}

smallPageFooter();
?>
