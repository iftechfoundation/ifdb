                array('<language>', '<system>'),
                array($x['language'], $x['system']),
                $x['toname']);
            echo "<span class=notes>" . initCap($toname) . " </span>";
        }
            
        for ( ; $i < $j ; ++$i) {
            $x = $inrefs[$i];
            echo "<span class=notes>"
                . "<a href=\"viewgame?id={$x['fromid']}\">"
                . "<i>{$x['title']}</i></a>"
                . ", by {$x['author']}</span><br>";
        }

        if ($cnt > 1)
            echo "</div>";
    }
