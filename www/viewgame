            "select
                id, title, author from games
             where
                title like '$qtitle'
                or match (title) against ('$qtitle' in boolean mode)
             order by
                if (title like '$qtitle', 0, 1),
                match (title) against ('$qtitle' in boolean mode) desc
             limit 0, 3", $db);
        $titleSearch = mysqli_fetch_all($result, MYSQL_ASSOC);
    }

