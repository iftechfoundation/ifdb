            $title = htmlspecialcharx(get_req_data('title'));
            $ldesc = htmlspecialcharx(get_req_data('ldesc'));
        }
    }
    
    // show the form
    echo "<p><form name=\"newsform\" method=post action=\"adminops\">"
        . "<input type=hidden name=addnews value=1>"
