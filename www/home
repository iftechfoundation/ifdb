            </style>
            <div id='home__allnew'>
            <?php

            function itemKey($i) {
               return $i[0] . ":" . $i[2][array_key_first($i[2])];
            }
            // get the latest games, reviews, and lists, and show a mix
            $items = array_slice(getNewItems($db, 8, NEWITEMS_ALLITEMS), 0, 8);
            $already_shown = array_fill_keys(array_map("itemKey", $items), 1);
            showNewItems($db, 0, 8, $items, false, false, NEWITEMS_ALLITEMS);
            ?>
            </div>
            <div><span class=details><a href='allnew'>See the full list...</a></span></div>
            </div>
         </div>
      </div>

      <div class="block flexer">
         <div class="column col-peer">
            <div class=headline id='games'><h1 class='unset'>Games</h1></div>

            <p><a href="/search?browse&sortby=lnew">New</a> | <a href="/search?browse">Top</a> | <a href="/search?searchbar=added%3A60d-">Hot</a> | <a href="/random">Random</a></p>
            <p><span class=details><a href="/editgame?id=new">Add a game listing</a></span></p>
            <?php

            // get the latest games and game news
            $game_items = getNewItems($db, 15, NEWITEMS_GAMES | NEWITEMS_GAMENEWS);
            $game_items = array_slice(array_filter($game_items, function($i) {
               global $already_shown;
               return !($already_shown[itemKey($i)] ?? false);
            }), 0, 7);
            showNewItems($db, 0, 7, $game_items, false, false, NEWITEMS_GAMES | NEWITEMS_GAMENEWS);
            ?>
            <p><span class='details'><a href='search?browse&sortby=lnew'>See the full list...</a></span></p>
         </div>
         <div class="column col-peer">
            <div class=headline id='reviews'><h1 class='unset'>Reviews</h1></div>
            <?php

            // get the latest reviews
            $review_items = getNewItems($db, 17, NEWITEMS_REVIEWS);
            $review_items = array_slice(array_filter($review_items, function($i) {
               global $already_shown;
               return !($already_shown[itemKey($i)] ?? false);
            }), 0, 9);
            showNewItems($db, 0, 9, $review_items, false, false, NEWITEMS_REVIEWS);

            ?>
            <p><span class='details'><a href='allnew?reviews'>See the full list...</a></span></p>
         </div>
      </div>

      <div class="block flexer">
