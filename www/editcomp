               "initGrids();\ndocument.body.addEventListener('mousedown', function (event) { checkClosePopup(event, true); });",
               scriptSrc('/gridform.js')
               . scriptSrc('/xmlreq.js'),
               false);



} else if ($show == "status") {

    // just showing status
